<?xml version="1.0" encoding="UTF-8"?>

<!--IMPORTING THE CONTROL WE ARE USING-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="15.0" prefHeight="402.0" prefWidth="263.0" vgap="15.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.SampleController">
    <Button defaultButton="true" onAction="#updateData" prefHeight="26.0" prefWidth="233.0" text="PROCEED" textFill="#616161" GridPane.rowIndex="6">
      <font>
         <Font name="Lato Black" size="13.0" />
      </font>
   </Button>
   <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#messageWindow" prefHeight="26.0" prefWidth="241.0" text="RECEIPT" textFill="#616161" GridPane.rowIndex="7">
      <font>
         <Font name="Lato Black" size="13.0" />
      </font>
   </Button>
    <Label fx:id="currentBalanceLabel" text="No Last Record" textFill="#616161" GridPane.rowIndex="10">
      <font>
         <Font name="Lato Black" size="16.0" />
      </font>
   </Label>
   <TextField fx:id="nameField" prefHeight="20.0" prefWidth="308.0" promptText="Name" GridPane.rowIndex="1">
      <font>
         <Font name="Lato Regular" size="13.0" />
      </font>
   </TextField>
   <TextField fx:id="accountNumberField" prefHeight="0.0" prefWidth="308.0" promptText="Account Number" GridPane.rowIndex="2">
      <font>
         <Font name="Lato Regular" size="13.0" />
      </font>
   </TextField>
   <TextField fx:id="balanceField" prefHeight="12.0" prefWidth="308.0" promptText="Balance $" GridPane.rowIndex="3">
      <font>
         <Font name="Lato Regular" size="13.0" />
      </font>
   </TextField>
   <TextField fx:id="withdrawAmountField" promptText="Withdraw Amount $" GridPane.rowIndex="4">
      <font>
         <Font name="Lato Regular" size="13.0" />
      </font>
   </TextField>
   <Label fx:id="dateLabel" text="Last Transaction Time." textFill="#616161">
      <font>
         <Font name="Lato Black" size="13.0" />
      </font>
   </Label>

   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</GridPane>
